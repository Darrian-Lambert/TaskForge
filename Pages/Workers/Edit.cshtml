@page
@model TaskForge.Pages.Workers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Html.DisplayFor(model => model.Worker.FullName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Worker.WorkerID" />
            <div class="form-group">
                <label asp-for="Worker.UserName" class="control-label"></label>
                <input asp-for="Worker.UserName" class="form-control" />
                <span asp-validation-for="Worker.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Worker.Password" class="control-label"></label>
                <input asp-for="Worker.Password" class="form-control" />
                <span asp-validation-for="Worker.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Worker.FullName" class="control-label"></label>
                <input asp-for="Worker.FullName" class="form-control" />
                <span asp-validation-for="Worker.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
