@page
@model TaskForge.Pages.Workers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Tasks</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Worker.FullName)</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10"></dd>
        @foreach(var x in Model.Worker.WorkerTasks) {
            <dd class="col-sm-4">
                @Html.DisplayFor(model => x.Title)
            </dd>
            <dd class="col-sm-4">
                @Html.DisplayFor(model => x.Description)
            </dd>
            <dd class="col-sm-4">
                <form method="post">
                    <input type="hidden" asp-for="TaskIdToDelete" value="@x.WorkerTaskID" />
                    <input type="submit" asp-page-handler="RemoveTask" value="Remove Task" class="btn btn-danger btn-sm" />
                </form>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Worker.WorkerID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
